<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>JS quiz</title>
		<link rel="stylesheet" href="./static/css/js.quiz.css" />
	</head>
	<body>
		<div id="navbarfix"><%- include('navbar.ejs') -%></div>
		<div class="progress">
			<div class="progress--bar"></div>
		</div>
		<div class="container">
			<h1>Quiz</h1>

			<div class="questionArea">
				<div class="question">...</div>
				<div class="options"></div>
			</div>

			<div class="scoreArea">
				<img
					id="resultimage"
					src="https://img.icons8.com/color/96/26e07f/checked--v4.png"
					class="prizeImage"
				/>
				<p>Finish!</p>
				<hr />
				<div class="scoreText1">--</div>
				<div class="scorePct">--</div>
				<div class="scoreText2">--</div>
				<button>Retry</button>
			</div>
		</div>
	</body>
</html>
<script src="./static/js/js.quiz.js"></script>
<script>
	document.getElementById("quiz").classList.add("active");
</script>
